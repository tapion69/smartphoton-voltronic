CRED_OUT="/data/node-red/flows-voltronic_cred.json"

# credentials Node-RED (format simple)
cat > "${CRED_OUT}" <<EOF
{
  "mqtt_broker_voltronic": {
    "user": "$(printf '%s' "${MQTT_USER}" | python3 -c 'import json,sys; print(json.dumps(sys.stdin.read())[1:-1])')",
    "password": "$(printf '%s' "${MQTT_PASS}" | python3 -c 'import json,sys; print(json.dumps(sys.stdin.read())[1:-1])')"
  }
}
EOF
